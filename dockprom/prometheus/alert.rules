groups:
- name: High memory load
  rules:
  - alert: high_memory_load
    expr: 70 < 100 * (node_memory_MemTotal_bytes - (node_memory_MemFree_bytes + node_memory_Cached_bytes + node_memory_Buffers_bytes))/node_memory_MemTotal_bytes < 90
    for: 30s
    labels:
      severity: warning
    annotations:
      summary: "High memory load"
      description: "The memory load in local machine is at {{ humanize $value }}% ( > 70%)"

  - alert: high_memory_load
    expr: 100 * (node_memory_MemTotal_bytes - (node_memory_MemFree_bytes + node_memory_Cached_bytes + node_memory_Buffers_bytes))/node_memory_MemTotal_bytes >  90
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "High memory load"
      description: "The memory load in local machine is at {{ humanize $value }}% (> 90%)"

- name: High CPU load
  rules:
  - alert: high_cpu_load
    expr: 70 < 100 - (avg by (instance) (irate(node_cpu_seconds_total{mode="idle"}[5m])) * 100) < 90
    for: 30s
    labels:
      severity: warning
    annotations:
      summary: "High cpu load"
      description: "The cpu load in local machine is at {{ humanize $value }}% (> 70%)."

  - alert: high_cpu_load
    expr:  100 - (avg by (instance) (irate(node_cpu_seconds_total{mode="idle"}[5m])) * 100) >  90
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "High cpu load"
      description: "The cpu load in local machine is at {{ humanize $value }}% (> 90%)."

- name: High Disk usage
  rules:
  - alert: high_disk_usage
    expr: 70 < sum (node_filesystem_avail_bytes)  / sum(node_filesystem_size_bytes) < 95
    for: 30s
    labels:
      severity: warning
    annotations:
      summary: "High Disk load"
      description: "The Disk load in local machine is at {{ humanize $value }}% (> 70%)."

  - alert: high_disk_usage
    expr: sum (node_filesystem_avail_bytes)  / sum (node_filesystem_size_bytes) > 95
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "High Disk load"
      description: "The Disk load in local machine is at {{ humanize $value }}% (> 95%)."
  
- name: example
  rules:
    - record: job:process_cpu_seconds:rate5m
      expr: sum without(instance)(rate(process_cpu_seconds_total[5m]))
    - record: job:process_open_fds:max
      expr: max without(instance)(process_open_fds)
    - record: memory_load_percent
      expr: 100 * (node_memory_MemTotal_bytes - (node_memory_MemFree_bytes + node_memory_Cached_bytes + node_memory_Buffers_bytes))/node_memory_MemTotal_bytes